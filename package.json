{
  "name": "docker-preact-pwa",
  "version": "1.0.0",
  "private": true,
  "LICENSE": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn serve || yarn dev",
    "build": "preact build",
    "serve": "preact build && preact serve -p ${PORT:-3100}",
    "dev": "preact watch -p ${PORT:-3100}",
    "lint": "eslint src",
    "precommit": "lint-staged",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\""
  },
  "workspaces": ["packages/*"],
  "reason": "Put main dependencies at workspace root to make CodeSandbox happy",
  "dependencies": {
    "now": "^10.2.1",
    "parse": "^1.11.1",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-material-components": "^1.3.3",
    "preact-router": "^2.5.5",
    "recompose": "^0.26.0",
    "styled-components": "^3.2.1",
    "styled-normalize": "^4.0.0"
  }
}
