{
  "name": "docker-preact-pwa",
  "version": "1.0.0",
  "private": true,
  "LICENSE": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn serve || yarn dev",
    "build": "preact build --clean --no-prerender",
    "serve": "yarn build && preact serve -p ${PORT:-3100}",
    "surge": "yarn build && cp build/index.html build/200.html && npx surge build",
    "serve-static": "yarn build && npx serve build -s",
    "dev": "preact watch -p ${PORT:-3100}",
    "lint": "eslint src",
    "precommit": "lint-staged",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\""
  },
  "workspaces": ["packages/*"],
  "dependencies": {
    "parse": "^1.11.1",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-material-components": "^1.3.3",
    "preact-router": "^2.5.5",
    "recompose": "^0.26.0",
    "styled-components": "^3.2.1",
    "styled-normalize": "^4.0.0"
  },
  "devDependencies": {
    "preact-cli-lodash": "^1.1.0",
    "if-env": "^1.0.0",
    "preact-cli": "^2.0.0"
  }
}
